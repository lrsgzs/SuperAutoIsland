<ci:SettingsPageBase x:Class="SuperAutoIsland.Controls.SettingPages.MainSettingsPage"
                     xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:SuperAutoIsland.Controls.SettingPages"
                     xmlns:ci="http://classisland.tech/schemas/xaml/core"
                     xmlns:fa="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
                     xmlns:settingPages="clr-namespace:SuperAutoIsland.Controls.SettingPages"
                     mc:Ignorable="d">
    <ScrollViewer DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=settingPages:MainSettingsPage}}">
        <StackPanel Classes="settings-container animated-intro">
            <fa:InfoBar IsOpen="True" IsVisible="True" Severity="Informational"
                        Message="欢迎使用 SuperAutoIsland！本插件使用了 Google Blockly，在此致谢。文档：abc.example.com"
            />
        
            <fa:SettingsExpander IconSource="{ci:FluentIconSource Glyph=&#xEF1F;}" Header="端口号" Description="服务器端口号">
                <fa:SettingsExpander.Footer>
                    <TextBox MinWidth="20"
                             Margin="3,0,6,0"
                             HorizontalContentAlignment="Center"
                             InputMethod.IsInputMethodEnabled="False"
                             Text="{Binding Settings.ServerPort, Mode=TwoWay}"/>
                </fa:SettingsExpander.Footer>
            </fa:SettingsExpander>
        </StackPanel>
    </ScrollViewer>
</ci:SettingsPageBase>